% Sets serif font family, affects \rmfamily
\setmainfont[
    Path           = ../fonts/roman/,
    Extension      = .otf,
    UprightFont    = *-Regular,       % affects \upshape, \mdseries
    BoldFont       = *-Bold,          % affects \upshape, \bfseries
    ItalicFont     = *-RegularItalic, % affects \itshape, \mdseries
    BoldItalicFont = *-BoldItalic,    % affects \itshape, \bfseries
]{NewYorkMedium} % Apple New York Medium


% Sets sans-serif font family, affects \sffamily
\setsansfont[
    Path           = ../fonts/sans-serif/,
    Extension      = .otf,
    UprightFont    = *-Regular,       % affects \upshape, \mdseries
    BoldFont       = *-Bold,          % affects \upshape, \bfseries
    ItalicFont     = *-RegularItalic, % affects \itshape, \mdseries
    BoldItalicFont = *-BoldItalic,    % affects \itshape, \bfseries
]{SFProText} % Apple San Francisco Pro Text


% Sets monospaced font family, affects \ttfamily
\setmonofont[
    Path           = ../fonts/mono/,
    Extension      = .otf,
    UprightFont    = *-Regular,       % affects \upshape, \mdseries
    BoldFont       = *-Bold,          % affects \upshape, \bfseries
    ItalicFont     = *-RegularItalic, % affects \itshape, \mdseries
    BoldItalicFont = *-BoldItalic,    % affects \itshape, \bfseries
]{SFMono} % Apple San Francisco Mono


% Sets math font family
\setmathfont[
    Path      = ../fonts/math/,
    Extension = .otf
]{STIXTwoMath-Regular}

